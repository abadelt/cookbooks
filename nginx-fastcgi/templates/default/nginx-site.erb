<%- @servers.each do |s| %>
server {

        <%- if  s[:ip].nil? %>
        listen <%= s[:port] %>;
        <%- else %>
        listen <%= "#{s[:ip]}:#{s[:port]}" %>;
        <%- end %>
        
        server_name  <%= s[:server_name] %> <%= s[:server_alias].join(' ') %>;
        <%- if s[:ssl_on] == true %>
            include <%= s[:ssl_include_path] %>;
        <%- end %>
        location / {
            include fastcgi_params;
        <%- if s[:ssl_on] == true %>
            fastcgi_param  HTTPS on;
        <%- end %>
            access_log /var/log/nginx/<%= s[:site_name] %>.access.log;
            error_log  /var/log/nginx/<%= s[:site_name] %>.error.log;
        }
}
<%- end %>

